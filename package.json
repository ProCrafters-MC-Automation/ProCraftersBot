{
  "name": "ProCrafters-Bots",
  "productName": "ProCrafters Bots",
  "description": "Application for ProCrafters Bots",
  "version": "1.0.0",
  "main": "main.js",
  "license": "Apache 2.0",
  "author": "ProCrafters",
  "devDependencies": {
    "electron": "^5.0.8",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^16.0.0",
    "electron-winstaller": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProCrafters-MC-Automation/ProCraftersBot.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "set APP_DEV=true && electron . --stacktrace",
    "package-mac": "electron-packager . --overwrite --asar --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds --darwinDarkModeSupport=true",
    "package-win": "electron-packager . ProCrafters-Bots --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ProCrafters Bots\"",
    "package-linux": "electron-packager . ProCrafters-Bots --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/ProCrafters\\ Bots-darwin-x64/ProCrafters\\ Bots.app ProCrafters-Bots --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "create-installer-win": "node installers/windows/createinstaller.js",
    "create-debian-installer": "electron-installer-debian --src release-builds/ProCrafters-Bots-linux-x64/ --arch amd64 --config debian.json"
  },
  "dependencies": {
    "electron-tabs": "^1.0.1"
  },
  "build": {
    "appId": "com.ProCraftersMCAutomation.ProCraftersBot",
    "productName": "ProCraftersBot",
    "copyright": "Copyright Â© 2022 ProCraftersMCAutomation",
    "win": {
      "target": "portable",
      "publisherName": "ProCraftersMCAutomation",
      "icon": "assets/icons/win/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/win/icon.png",
      "category": "Utility"
    }
  }
}